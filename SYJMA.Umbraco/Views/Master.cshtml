@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.Master>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@CurrentPage.pageTitle | @CurrentPage.siteName</title>
    <!-- Bootstrap -->
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/emailSubscription.js"></script>

</head>
<body style="padding-bottom: 0px;">

    @* S_Header *@
    <div id="main_navbar" class="navbar navbar-custom">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @* Home Page Navigation *@
                @Html.Partial("_navi_Home")
            </div>
            <div class="navbar-collapse collapse" style="z-index:1;">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="http://sydneyjewishmuseum.com.au/visit/">Visit</a> 
                        <ul class="sub-menu" style="display: none;">
                            <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-71"><a href="http://sydneyjewishmuseum.com.au/visit/plan-your-visit/">Plan Your Visit</a></li>
                            <li class="events-calendar menu-item menu-item-type-taxonomy menu-item-object-product_cat menu-item-135"><a href="http://sydneyjewishmuseum.com.au/product-category/events/">Events Calendar</a></li>
                            <li class="menu-item menu-item-type-post_type menu-item-object-page menu-item-69"><a href="http://sydneyjewishmuseum.com.au/visit/groups-tours/">Group Tours</a></li>
                        </ul>
                    </li>
                    <li><a href="http://sydneyjewishmuseum.com.au/explore/">Explore</a> </li>
                    <li><a href="http://sydneyjewishmuseum.com.au/learn/">Learn</a> </li>
                    <li><a href="http://sydneyjewishmuseum.com.au/support/">Support</a> </li>
                    <li><a href="http://sydneyjewishmuseum.com.au/product-category/products/">Shop</a> </li>
                    <li><a href="http://sydneyjewishmuseum.com.au/news/">News</a> </li>
                </ul>
            </div>
        </div>
    </div>
    <div id="sub_navbar" class="col-xs-12 hidden-xs" style="">

    </div>
    @* Donate Link *@
    <div id="donate_div" class="container">
        <a href="https://www.thankq.net.au/donate/v275/Donate1.aspx?ref=5677479838&pid=8" class="btn btn-warning pull-right">DONATE TO SJM &nbsp; <i class="fa fa-heart" aria-hidden="true"></i></a>
    </div>
    @* E_Header *@

    @* S_Body *@
    <div class="container body-content">
        @RenderBody()
    </div>
    @* E_Body *@

    @* S_Footer *@
    <div id="social_div">
        <div class="container">
            <div style="padding-top: 30px;">
                <a href="#" style="color:#d4d5d9"><i class="fa fa-caret-square-o-up" aria-hidden="true"></i></a>
                &nbsp;
                <a href="https://twitter.com/sydjewishmuseum" style="color:#9396a0"><i class="fa fa-twitter-square" aria-hidden="true"></i></a>
                &nbsp;
                <a href="https://www.facebook.com/sydneyjewishmuseum/" style="color:#9396a0"><i class="fa fa-facebook-square" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
    <div id="footer_div">
        <div class="container">

            <div style="color: #d1dbe5; border-left: 1px solid #d1dbe5; padding-left: 1em; margin-top: 20px; margin-bottom: 20px; margin-right: 10px; width: 210px; float: left;">
                Sydney Jewish Museum
                <br />
                148 Darlinghurst Road
                <br />
                Darlinghurst, NSW
                <br />
                Australia 2010
                <br />
                +61 2 9360 7999
                <br />
                info@sjm.com.au
            </div>

            <div style="color: #d1dbe5; border-left: 1px solid #d1dbe5; padding-left: 1em; margin-top: 20px; margin-bottom: 20px; margin-right:0px; width: 300px; float: left;">
                <ul style="list-style-type: none; padding-left: 0px;">
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/about/">About</a> </li>
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/blog/">Blog</a> </li>
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/contact/">Contact</a> </li>
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/venue-hire/">Venue Hire</a> </li>
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/jewishholydays/">The Museum is closed on...</a> </li>
                    <li><a style="color: inherit" href="http://sydneyjewishmuseum.com.au/privacy-policy/">Privacy Policy</a> </li>
                </ul>
            </div>
        </div>
        <div id="footer_newsletter_div" class="hidden-sm hidden-xs">
            <table class="table table-borderless" id="newsletter_tbl">
                <tr>
                    <td>
                        <img src="~/Images/ico-newsletter.png" />
                    </td>
                    <td><b style="font-size: 20px;">Newsletter</b></td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="form-group">
                            <div class="input-group">
                                <input class="form-control" type="text" name="sub_name" id="sub_name" placeholder="First name and surename" />
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <div class="form-group">
                            <div class="input-group">
                                <input class="form-control" type="text" name="sub_email" id="sub_email" placeholder="Email Address" />
                            </div>
                        </div>

                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <button class="form-control btn btn-info" id="sub_btn"><span class="pull-left">SUBMIT</span><i class="fa fa-long-arrow-right pull-right" aria-hidden="true" style="font-size: 25px;"></i></button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    @* E_Footer *@
</body>
</html>
