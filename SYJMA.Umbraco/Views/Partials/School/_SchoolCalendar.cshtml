@using SYJMA.Umbraco.Controllers;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<SYJMA.Umbraco.Models.SchoolModel>

<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/ui.helper.js"></script>
<script src="~/Scripts/calendar.control.js"></script>
<link href="~/Content/calendar.css" rel="stylesheet" />
<script>
    var baseUrl = '@ViewBag.rootUrl';
    var category = '@ViewBag.bookType';
    $(document).ready(function () {
        $('#selectionConfirm').hide();
        calendar.init("@Model.PreferredDate.AsDateTime().ToString("yyyy-MM-dd")");
    })
</script>

@using (Html.BeginUmbracoForm<CalendarFormController>("PostCalendarForm_School", null, new Dictionary<string, object> { { "id", "calendarForm" }, { "onsubmit", "return validationForm()" } }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <b>Programs </b>
                <br />
                <small>
                    The following programs are available.<br />
                    &emsp;1. Select a Program<br />
                    &emsp;2. Select day and time<br />
                </small>
            </div>
            <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                <ul class="radio" style="list-style-type: none">
                    @foreach (var item in Model.ProgramList)
                    {
                        <li>
                            <label><span style="font-size:22px;"><b>@Html.RadioButtonFor(m => m.Program, item.Value, new { @style = "margin-top:10px;" })@item.Value</b></span></label>
                        </li>
                    }
                </ul>
            </div>
            <div id="syjma_calendar" class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                @* Display Calendar here *@
            </div>
        </div>
        <div id="externalLink" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @Umbraco.Field("programDescriptionLink")
        </div>
        <div id="selectionConfirm" style="min-height: 105px;" class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
        </div>
        @Html.HiddenFor(x => x.Event.title, new { @id = "selectedEventTitle" })
        @Html.HiddenFor(x => x.Event.start, new { @id = "selectedEventStart" })
        @Html.HiddenFor(x => x.Event.end, new { @id = "selectedEventEnd" })
        @Html.HiddenFor(x => x.Event.id, new { @id = "selectedEventId" })
        @Html.HiddenFor(x => x.Event.IsInvoiceOnly, new { @id = "isInvoiceOnly" })
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.StudentsNumber)
        @Html.HiddenFor(x => x.Comments)
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <a href="@ViewBag.parentUrl" class="btn btn-md btn-primary pull-left">Back</a>
            <input type="submit" name="submit" value="Next" class="btn btn-md btn-primary pull-right" />
        </div>
    </div>
}
