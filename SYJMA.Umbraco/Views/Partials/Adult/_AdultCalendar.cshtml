@using SYJMA.Umbraco.Controllers;
@inherits Umbraco.Web.Mvc.UmbracoViewPage<SYJMA.Umbraco.Models.AdultModel>
<script type="text/javascript">
    $(document).ready(function () {
        var baseUrl = '@ViewBag.rootUrl';
        $.ajax({
            type: 'POST',
            url: baseUrl + 'umbraco/Surface/JSONData/GetJsonData_Event?eventName=@Model.Program&category=Adult',
            success: function (result) {
                addEvent(result);
            }
        });
    });
</script>
<link href="~/Content/fullcalendar.css" rel="stylesheet" />
<link href="~/Content/fullcalendar.print.css" rel="stylesheet" media="print" />
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/fullcalendar.min.js"></script>

<script src="~/Scripts/calendar.control.js"></script>
<link href="~/Content/calendar.control.css" rel="stylesheet" />



@using (Html.BeginUmbracoForm<CalendarFormController>("PostCalendarForm_Adult", null, new Dictionary<string, object> { { "id", "calendarForm" }, { "onsubmit", "return validationForm()" } }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="form-group col-md-4">
            <b>Your Program </b>
            <br />
            <br />
            <span>@Html.DisplayFor(x => x.Program)</span>
        </div>

        <div id="calendar" class="form-group col-md-8">
            @* Display Calendar here *@
        </div>

        <div id="selectionConfirm" style="min-height: 105px;" class="form-group col-md-12">
        </div>
        @Html.HiddenFor(x => x.Event.title, new { @id = "selectedEventTitle" })
        @Html.HiddenFor(x => x.Event.start, new { @id = "selectedEventStart" })
        @Html.HiddenFor(x => x.Event.end, new { @id = "selectedEventEnd" })
        @Html.HiddenFor(x => x.Event.id, new { @id = "selectedEventId" })
        @Html.HiddenFor(x => x.Event.IsInvoiceOnly, new { @id = "isInvoiceOnly" })
        @Html.HiddenFor(x => x.AdultNumber)
        @Html.HiddenFor(x => x.Id)
        <div class="col-md-12">
            <a href="@ViewBag.parentUrl" class="btn btn-md btn-primary pull-left">Back</a>
            <input type="submit" name="submit" value="Next" class="btn btn-md btn-primary pull-right" />
        </div>
    </div>
}